<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.szentesi.david.cyclingpalapp.activities.LoginActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/loginToolbar"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cyclist"
        android:scaleType="centerCrop"
        android:layout_below="@+id/loginToolbar" />

    <TextView
        android:text="Cycling Pal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appTitleTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/loginToolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <EditText
        android:inputType="textPersonName"
        android:id="@+id/userNameEditText"
        android:hint="Enter User Name"
        android:layout_above="@+id/passwordEditText"
        style="@style/LoginEditTextStyle"/>

    <EditText
        android:inputType="textPassword"
        android:id="@+id/passwordEditText"
        android:hint="Password"
        android:layout_above="@+id/loginButton"
        android:layout_marginBottom="15dp"
        style="@style/LoginEditTextStyle"/>

    <Button
        android:text="login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        style="@style/ButtonStyle" />

    <Button
        android:text="register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerButton"
        android:layout_alignBaseline="@+id/loginButton"
        android:layout_alignBottom="@+id/loginButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        style="@style/ButtonStyle" />

</RelativeLayout>
